@model AspNetBookstore.Models.Book

@{
    ViewBag.Title = "Book - " + Model.Title;
}

<h2>@Model.Title</h2>

<div id="album-details">
    <p>
        <strong>Category:</strong>
        @Model.Category.Name
    </p>
    <p>
        <strong>Author:</strong>
        @Model.Author.Name
    </p>
    <p>
        <strong>Price:</strong>
        @String.Format("{0:F}", Model.Price)
    </p>
    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart",
        "ShoppingCart", new { id = Model.BookId }, "")
    </p>
</div>